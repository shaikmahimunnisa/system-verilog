class packet;
  rand byte addr;
  rand byte data ;
endclass

module disable_mode;
  initial begin
    packet pkt;
    pkt = new();
    
    pkt.data.rand_mode(0);
    
    pkt.randomize();
    
    $display("\t addr=%0d data=%0d ",pkt.addr,pkt.data);
    $display("\t addr.rand_mode=%0d \tdata.rand_mode=%0d",pkt.addr.rand_mode(),pkt.data.rand_mode());
  end
endmodule
